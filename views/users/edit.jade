extends ../container_layout

block container
  form.form-horizontal(action= "/users/#{id}", method= "post")
    legend Input User Info

    input(type= "hidden", name= "_method", value= "put")

    include _form

    .control-group
      label.control-label(for= "created_at") created at
      .controls
        input#created_at.span4(name= "created_at", type= "text", disabled= "disabled", value= "#{created_at}")

    .control-group
      label.control-label(for= "updated_at") updated at
      .controls
        input#updated_at.span4(name= "updated_at", type= "text", disabled= "disabled", value= "#{updated_at}")

    .form-actions
      button.btn.btn-primary(type= "submit") Submit
      | &nbsp;
      button.btn(type= "reset") Cancel

append script
  script
    var admin = "#{admin}";
    $("#email").attr("disabled", "disabled");
    if (admin === 'on') {
      $("#admin").attr("checked", true);
    }
    $("#nav_home").removeClass("active");
    $("#nav_settings").addClass("active");
