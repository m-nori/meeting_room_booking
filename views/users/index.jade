extends ../container_layout

block container
  table.table.table-striped
    thead
      tr
        th #
        th id
        th name
        th group
        th action
    tbody
      each user, i in users
        tr
          td= i
          td
            a(href= "/users/#{user.id}/edit") #{user.email}
          td= user.name
          td= user.group
          td
            - if (uid !== user.id)
              a.btn(href= "/users/#{user.id}", data-method= "delete") delete
            - else
              a.btn(disabled= "disabled") delete
