doctype 5
html
  head
    meta(charset= "utf-8")
    title= title
    meta(name= "viewport", content= "width= device-width, initial-scale= 1.0")
    block css
      link(rel='stylesheet', href='/css/bootstrap.min.css')
      link(rel='stylesheet', href='/css/bootstrap-responsive.min.css')
      link(rel='stylesheet', href='/css/style.css')
  body
    block navbar
      .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
          .container-fluid
            a.btn.btn-navbar(data-toggle= "collapse", data-target= ".nav-collapse")
              span.icon-bar
              span.icon-bar
            a.brand(href= "/") #{title}
            .nav-collapse.collapse
              p.navbar-text.pull-right Username
              ul.nav
                li#nav_home.active
                  a(href= "/") Home
                li#nav_settings.dropdown
                  a.dropdown-toggle(href= "#", role= "button", data-toggle= "dropdown") Settings
                    b.caret
                  ul.dropdown-menu(role= "menu")
                    li
                      a(href= "/") Meeting Room

    block content

    block script
      script(src= "/js/jquery-1.8.3.min.js", type= "text/javascript")
      script(src= "/js/bootstrap.min.js", type= "text/javascript")
      script(src= "/js/init.js", type= "text/javascript")
